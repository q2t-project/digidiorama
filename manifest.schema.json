{
  "$schema": "https://json-schema.org/draft/2020-12/schema/draft-2020-12-schema.json",
  "$id": "https://example.org/manifest.schema.json",
  "title": "Manifest Schema",
  "oneOf": [
    {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "type": "object",
      "required": [
        "groups"
      ],
      "properties": {
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "title",
              "files"
            ],
            "properties": {
              "title": {
                "type": "string"
              },
              "files": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "path"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "path": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  ]
}